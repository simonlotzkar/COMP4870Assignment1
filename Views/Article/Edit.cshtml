@model COMP4870Assignment1.Models.Articles
@{
    ViewData["Title"] = "Edit Article";
}

<h2 class="text-center my-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="card shadow-lg p-4">
        <form asp-action="Edit">
            <!-- Hidden fields -->
            <input type="hidden" asp-for="CreateDate" />
            <input type="hidden" asp-for="ArticleId" />
            <input type="hidden" asp-for="UserId" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter article title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Body" class="form-label fw-bold"></label>
                <textarea asp-for="Body" class="form-control" rows="6" placeholder="Enter article body"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div class="row">
                <!-- Start Date Selection -->
                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label fw-bold"></label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- End Date Selection -->
                <div class="col-md-6 mb-3">
                    <label asp-for="EndDate" class="form-label fw-bold"></label>
                    <input asp-for="EndDate" class="form-control" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">Save</button>
                <a asp-action="Contributor" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>