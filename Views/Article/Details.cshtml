@model COMP4870Assignment1.Models.Articles

<div class="container mt-4">
    <div class="card shadow-lg p-4" style="max-width: 800px; margin: auto;">
        <h1 class="fw-bold text-dark">@Model.Title</h1>

        <p class="text-muted">
            @if (@Model.User != null)
            {
                @($"{Model.User.FirstName} {Model.User.LastName}")
            }
            else
            {
                <span class="text-danger">User data not available</span>
            }
        </p>

        <p class="text-secondary mt-3">@Model.Body</p>

        <div class="mt-3 text-muted">
            <strong>Available:</strong> @Model.StartDate.ToShortDateString() to @Model.EndDate.ToShortDateString()
        </div>

        <div class="mt-2 text-muted">
            <strong>Created:</strong> @Model.CreateDate.ToShortDateString()
        </div>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
        </div>
    </div>
</div>