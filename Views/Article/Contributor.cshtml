@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Manage Articles";
    var articles = ViewData["Article"] as List<Articles>;
}

<h2 class="text-center my-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="mb-3 text-end">
        <a class="btn btn-success" asp-controller="Article" asp-action="Create">Create New Article</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Body</th>
                    <th>Create Date</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in articles!)
                {
                    <tr>
                        <td class="align-middle">@article.ArticleId</td>
                        <td class="align-middle">@article.Title</td>
                        <td class="align-middle text-truncate" style="max-width: 200px;">@article.Body</td>
                        <td class="align-middle">@article.CreateDate.ToString("yyyy-MM-dd")</td>
                        <td class="align-middle">@article.StartDate.ToString("yyyy-MM-dd")</td>
                        <td class="align-middle">@article.EndDate.ToString("yyyy-MM-dd")</td>
                        <td class="align-middle">@article.Email</td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-center gap-2">
                                <a class="btn btn-primary btn-sm" asp-controller="Article" asp-action="Edit"
                                    asp-route-id="@article.ArticleId">Edit</a>
                                <form method="post" asp-controller="Article" asp-action="Delete"
                                    asp-route-id="@article.ArticleId"
                                    onsubmit="return confirm('Are you sure you want to delete this article?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
