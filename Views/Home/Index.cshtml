@{
    var articles = ViewData["Articles"] as List<COMP4870Assignment1.Models.Articles>; 
}

    @foreach (var article in articles!)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">@article.Title</h5>
                <small class="text-muted">By @article.Email</small>
            </div>
            <div class="card-body">
                <p class="card-text text-muted">
                    <strong>Created:</strong> @article.CreateDate.ToString("MMMM dd, yyyy") |
                    <strong>Active:</strong> @article.StartDate.ToString("MMMM dd, yyyy") - @article.EndDate.ToString("MMMM dd, yyyy")
                </p>
                <div class="article-body">
                    @Html.Raw(article.Body ?? "No content available")
                </div>
            </div>
        </div>
    }
